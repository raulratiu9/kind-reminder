<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Checked state -->
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="#4CAF50" /> <!-- Checked color -->
            <stroke android:width="2dp" android:color="#90EE90" /> <!-- Border color -->
        </shape>
    </item>

    <!-- Unchecked state -->
    <item android:state_checked="false">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" /> <!-- Unchecked background -->
            <stroke android:width="2dp" android:color="#4CAF50" /> <!-- Border color -->
        </shape>
    </item>
</selector>
